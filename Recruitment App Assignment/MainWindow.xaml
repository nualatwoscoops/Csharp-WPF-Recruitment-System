<Window x:Class="Recruitment_App_Assignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NuCorp Contractor Recruitment Management System" Height="439" Width="600"
        FontSize="12">

    <Grid Margin="0,0,63,83">
        <!-- ====================== -->
        <!-- Add Contractor Section -->
        <!-- ====================== -->
        <Label Content="Add Contractor" FontWeight="Bold" FontSize="14" Margin="10,10,0,299" HorizontalAlignment="Left"/>
       
        <!-- Add Contractor Data -->
        <Label Content="First Name:" HorizontalAlignment="Left" Margin="74,71,0,0" VerticalAlignment="Top"/>
        <Label Content="Last Name:" HorizontalAlignment="Left" Margin="74,102,0,0" VerticalAlignment="Top"/>
        <Label Content="Start Date:" HorizontalAlignment="Left" Margin="74,142,0,0" VerticalAlignment="Top"/>
        <Label Content="Hourly Rate ($):" HorizontalAlignment="Left" Margin="51,190,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FirstNameBox" HorizontalAlignment="Left" Height="23" Margin="149,74,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LastNameBox" HorizontalAlignment="Left" Height="23" Margin="149,106,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="StartDatePicker" HorizontalAlignment="Left" Margin="149,142,0,0" VerticalAlignment="Top" Height="35" Width="120"/>
        <ComboBox x:Name="HourlyRate_ComboBox" HorizontalAlignment="Left" Margin="149,190,0,0" VerticalAlignment="Top" Width="120"/>

        <!-- Button to Add Contractor -->
        <Button x:Name="Button_AddContractor" Content="Add Contractor" HorizontalAlignment="Left" Margin="149,233,0,0" VerticalAlignment="Top" Width="120" Click="Button_AddContractor_Click"/>

        <!-- View Contractors and Load -->
        <ListBox x:Name="Contractors_ListBox" HorizontalAlignment="Left" Height="278" Margin="300,10,0,0" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="Button_Load_Contractors" Content="Load Contractors" HorizontalAlignment="Left" Margin="335,293,0,0" VerticalAlignment="Top" Width="185" Height="27" Click="Button_Load_Contractors_Click"/>
</Grid>
</Window>
